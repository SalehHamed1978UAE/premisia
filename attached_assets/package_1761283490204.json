{
  "name": "@company/planning-system",
  "version": "1.0.0",
  "description": "Intelligent Project Planning System with LLM-based optimization",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "clean": "rm -rf dist coverage",
    "precommit": "npm run lint && npm run type-check && npm run test",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "openai": "^4.28.0",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "date-fns": "^3.3.1",
    "lodash": "^4.17.21",
    "dotenv": "^16.4.5",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "winston": "^3.11.0",
    "joi": "^17.12.1",
    "uuid": "^9.0.1",
    "p-queue": "^8.0.1",
    "p-retry": "^6.2.0",
    "bull": "^4.12.1",
    "ioredis": "^5.3.2",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.11.0",
    "@types/lodash": "^4.14.202",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/uuid": "^9.0.8",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "supertest": "^6.3.4",
    "@faker-js/faker": "^8.4.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "prettier": "^3.2.5",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/company/planning-system.git"
  },
  "keywords": [
    "project-planning",
    "gantt",
    "cpm",
    "critical-path",
    "resource-leveling",
    "llm",
    "ai",
    "optimization",
    "scheduling"
  ],
  "author": "Your Company",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/company/planning-system/issues"
  },
  "homepage": "https://github.com/company/planning-system#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts",
      "!src/**/*.spec.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  }
}
